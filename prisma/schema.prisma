generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  name        String?
  password    String
  bio         String?
  avatar      String?
  phone       String?
  address     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  role        Role      @default(USER) // ðŸ‘ˆ New field for user type

  // Relation
  bookings    Booking[] // ðŸ‘ˆ One-to-many relation (user can have many bookings)
}

model Booking {
  id             Int       @id @default(autoincrement())
  userId         Int
  user           User      @relation(fields: [userId], references: [id])

  guestName      String
  email          String
  phone          String
  checkInDate    DateTime
  checkOutDate   DateTime
  numberOfPerson Int       // ðŸ‘ˆ added this line
  status         String    @default("Pending")
  createdAt      DateTime  @default(now())
}
