{
  "compilerOptions": {
    /* File Structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Module + Target */
    "module": "NodeNext",       // for ESM in Node.js
    "moduleResolution": "NodeNext",
    "target": "ES2022",         // modern JS for Node 18+
    "lib": ["ES2022"],          // enable modern APIs

    /* Types */
    "types": ["node"],          // enable Node.js types
    "esModuleInterop": true,    // allow default import from CJS
    "allowSyntheticDefaultImports": true,

    /* Strictness (recommended) */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Output */
    "declaration": true,        // generate .d.ts for type safety
    "sourceMap": true           // for debugging
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}